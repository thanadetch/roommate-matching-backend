generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ListingStatus {
  OPEN
  CLOSED
}

model RoomListing {
  id            String        @id @default(uuid())
  hostId        String       // Refer Profile.id (Diff DB)
  title         String
  description   String?
  location      String
  pricePerMonth Int
  rules         Json?         // { noSmoking:true, petFriendly:false, quiet:true, nightOwl:false }
  lifestyle     String[]      // to filter such as ["Quiet", "Pet Friendly"]
  availableFrom DateTime?
  status        ListingStatus @default(OPEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([hostId])
  @@index([status, location])
  @@index([pricePerMonth])
}
