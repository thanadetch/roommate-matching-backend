generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ListingStatus {
  OPEN
  CLOSED
}

model RoomListing {
  id            String        @id @default(uuid())
  hostId        String // อ้างอิง Profile.id (ต่าง DB)
  title         String
  description   String?
  location      String
  pricePerMonth Int
  rules         Json? // { noSmoking:true, noPet:false }
  availableFrom DateTime?
  status        ListingStatus @default(OPEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([hostId])
  @@index([status, location])
  @@index([pricePerMonth])
}
