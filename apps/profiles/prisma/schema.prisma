generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

model Profile {
  id       String @id @default(uuid())
  // Account
  email    String @unique
  password String

  // Business profile
  firstName     String
  lastName      String
  gender        Gender?
  budgetMin     Int?
  budgetMax     Int?
  preferredArea String?

  // Lifestyle preferences
  smoking     Boolean? @default(false)
  petOwner    Boolean? @default(false)
  nightOwl    Boolean? @default(false)
  quietPerson Boolean? @default(false)

  // Contact (เผยเมื่อ match แล้ว)
  contactLine  String? // Line ID
  contactEmail String? // Contact Email

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
