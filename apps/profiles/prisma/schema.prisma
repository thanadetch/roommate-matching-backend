generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

model Profile {
  id           String @id @default(uuid())
  // Account
  email        String @unique
  passwordHash String

  // Business profile
  name          String
  gender        Gender? // ใช้ enum จำกัดแค่ male / female
  budgetMin     Int?
  budgetMax     Int?
  preferredArea String?
  lifestyle     Json? // { smoking:false, pet:true, nightOwl:true, quiet:true }

  // Contact (เผยเมื่อ match แล้ว)
  contactLine  String?
  contactEmail String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([preferredArea])
  @@index([budgetMin, budgetMax])
}
