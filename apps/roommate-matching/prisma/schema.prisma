generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Interest {
  id            String         @id @default(uuid())
  roomListingId String
  seekerId      String
  message       String?
  lifestyle     Json?
  status        InterestStatus @default(PENDING)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model RoommateMatch {
  id            String      @id @default(uuid())
  roomListingId String
  hostId        String
  seekerId      String
  matchedAt     DateTime    @default(now())
  status        MatchStatus @default(MATCHED)
  review        String?
  rating        Int?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

enum InterestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum MatchStatus {
  MATCHED
  ENDED
}
